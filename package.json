{
  "name": "Software-testing-assignment",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "", 
  "bin": {
    "coveralls": "./bin/coveralls.js"
  },
  "scripts": {
    "test": "mocha --exit --timeout 1000 --recursive test/pipeline",
    "test-local": "mocha --exit --timeout 1000 --recursive test/local",
    "coverage": "c8 --exclude=src/.internal npm test && c8 report --reporter=text-lcov | coveralls",
    "acoverage": "c8 --reporter=lcov --exclude=src/.internal mocha --exit --recursive test/pipeline",
	"cover:test": "c8 --reporter=html --reporter=text mocha --exit --timeout 1000 --recursive test/pipeline",
    "cover:report": "c8 report --reporter=text-lcov | coveralls",
	"test-cov": "c8 npm run test",
    "test-coveralls": "c8 npm run test | node ./bin/coveralls.js --verbose"
  },
  "author": "Riku & Joonas - Project group",
  "license": "MIT",
  "devDependencies": {
    "c8": "^7.12.0",
    "chai": "^4.2.0",
    "coveralls": "^3.1.1",
    "mocha": "^8.1.3",
    "mocha-lcov-reporter": "1.2.0"
  }
}
